{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "preserve",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./*"
      ], 
      "@turbotest/ui": ["../../packages/ui"]
    },
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },  
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "__test__",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "Firebase"
  ]
}
