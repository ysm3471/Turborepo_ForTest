{
  "compilerOptions": {
    "target": "esnext",
    "lib": [
      "es6",
      "es5",
      "dom"
    ],
    "declaration": true,
    "strict": true,
    "noEmit": false,
    "esModuleInterop": true,
    "module": "commonjs",
    "jsx": "react-jsx",
    "forceConsistentCasingInFileNames": true,
    "incremental": true,  
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
  },
  "include": [
    "**/*.ts",
    "**/*.tsx"
  ]
}